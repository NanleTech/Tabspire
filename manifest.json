{
  "manifest_version": 3,
  "name": "Tabspire",
  "version": "1.1.6",
  "description": "Tabspire delivers daily inspiration with a random scripture and beautiful background each time you open a new tab.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "host_permissions": [
    "https://api.unsplash.com/*",
    "https://api.scripture.api.bible/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "author": "Your Name",
  "homepage_url": "https://github.com/yourusername/tabspire",
  "offline_enabled": true,
  "permissions": [
    "clipboardWrite"
  ]
}